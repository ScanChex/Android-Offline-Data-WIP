<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:id="@+id/questionScreen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="10dp" >

            <TextView
                android:id="@+id/asset_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Enter notes below:"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layoutId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/asset_id"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/questioncounter"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" >

                    <ImageView
                        android:id="@+id/question_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black"
                        android:src="@drawable/notes_btn" />

                    <TextView
                        android:id="@+id/textViewNotes"
                        android:text="1"
                        style="@style/textViewCounter" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/questioimagecounter"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" >

                    <ImageView
                        android:id="@+id/question_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_btn" />

                    <TextView
                        android:id="@+id/imagetextViewNotes"
                        android:text="1"
                        style="@style/textViewCounter" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/questionaudiocounter"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" >

                    <ImageView
                        android:id="@+id/question_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/audio_btn" />

                    <TextView
                        android:id="@+id/audiotextViewNotes"
                        android:text="1"
                        style="@style/textViewCounter" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/questionvideocounter"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" >

                    <ImageView
                        android:id="@+id/question_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/video_btn" />

                    <TextView
                        android:id="@+id/textViewvideoNotes"
                        android:text="1"
                        style="@style/textViewCounter" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/layoutId"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/questions_layout_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/question_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:textStyle="bold" />

        <Button
            android:id="@+id/scan_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:text="Scan"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>
