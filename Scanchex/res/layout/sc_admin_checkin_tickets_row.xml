<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tickets_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ff00"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeImage1"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/photo_not_available" />

            <ImageView
                android:id="@+id/ticket_status_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/excalamation_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text5"
            style="@style/ticketIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="13-100-000217"
            android:textColor="@color/black" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeImages"
        android:layout_width="@dimen/checkinTicketWidth"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:orientation="vertical" 
        android:paddingLeft="4dp"
        android:paddingRight="5dp">

            <TextView
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="June 09, 2013"
                android:textColor="@color/black"
                android:textSize="8sp" 
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/text9"
                style="@style/timeSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text8"
                android:singleLine="true"
                android:text="12:00 AM"
                android:textColor="@color/black"
                android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCheckIn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/text9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="#67FFFF"
            android:onClick="onClickCheckIn"
            android:text="CHECK IN"
            android:textColor="#000000"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/checkimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/buttonCheckIn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/relativeImages"
        android:layout_toRightOf="@+id/linearLayout1"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="0dp"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text5"
            android:layout_below="@+id/text5"
            android:layout_marginTop="2dp"
            android:text="US-6425790-0001-0000-0001"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text1"
            style="@style/ticketIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_view"
            android:text="Client 1"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text7"
            style="@style/defaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:text="Standby Generator"
            android:textColor="@color/black"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text2"
            style="@style/defaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:onClick="onPhoneClick"
            android:text="(305) 123.4567"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp" >

            <TextView
                android:id="@+id/text3"
                style="@style/defaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="2500 NW 79 Ave"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text4"
                style="@style/defaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text3"
                android:layout_marginTop="2dp"
                android:maxLines="3"
                android:text="Miami, Florida"
                android:textColor="@color/black" />

      
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
